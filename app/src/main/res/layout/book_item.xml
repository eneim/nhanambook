<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ene="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="bottom|center_horizontal" >

    <ImageView
        android:id="@+id/book_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:contentDescription="@null"
        android:background="@drawable/background_book_item"
        android:scaleType="fitEnd"
        android:src="@drawable/book_cover_placeholder" />

    <im.ene.lab.nnbook.views.ENETextView
        android:id="@+id/book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/book_cover"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/book_cover"
        android:layout_below="@id/book_cover"
        android:singleLine="true"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone"
        ene:ttf_name="texgyreadventor-regular.otf" />

</RelativeLayout>